@model StayEasePG.Models.RoomDetails
@{
    ViewBag.Title = "Add Room";
}
<h2>Add Room</h2>
@using (Html.BeginForm())
{
    <div class="form-group">
        <label>PG</label>
        @Html.TextBoxFor(m => m.PGID, new { @class = "form-control", type = "number", placeholder = "Enter PG ID" })
    </div>
    <div class="form-group">
        <label>Room Type</label>
        @Html.TextBoxFor(m => m.RoomType, new { @class = "form-control", placeholder = "1 Sharing, 2 Sharing etc." })
    </div>
    <div class="form-group">
        <label>Total Rooms</label>
        @Html.TextBoxFor(m => m.TotalRooms, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        <label>Available Rooms</label>
        @Html.TextBoxFor(m => m.AvailableRooms, new { @class = "form-control", type = "number" })
    </div>
    <div class="form-group">
        <label>Price per Day</label>
        @Html.TextBoxFor(m => m.PricePerDay, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Price per Week</label>
        @Html.TextBoxFor(m => m.PricePerWeek, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Price per Month</label>
        @Html.TextBoxFor(m => m.PricePerMonth, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Maintenance Charges</label>
        @Html.TextBoxFor(m => m.MaintenanceCharges, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Advance Amount</label>
        @Html.TextBoxFor(m => m.AdvanceAmount, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Deposit Amount</label>
        @Html.TextBoxFor(m => m.DepositAmount, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        <label>Amenities</label><br />
        @if (ViewBag.Amenities != null)
        {
            foreach (var amenity in (List<StayEasePG.Models.Amenity>)ViewBag.Amenities)
            {
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" name="SelectedAmenities" value="@amenity.AmenityID" />
                    <label class="form-check-label">@amenity.AmenityName</label>
                </div>
            }
        }
    </div>
    <br />
    <button class="btn btn-success">Save</button>
}